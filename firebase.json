{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/imagessitemap.json",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://amithgc.com https://amith.co.in"
          }
        ]
      }
    ]
  }
}
